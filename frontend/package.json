{
  "name": "cloudflare-static-deployer-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "type-check": "vue-tsc --noEmit",
    "deploy:cloudflare": "npm run build && wrangler pages deploy dist --project-name=cloudflare-static-deployer",
    "pages:deploy": "npm run deploy:cloudflare",
    "pages:dev": "wrangler pages dev dist --port=8788 --local",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "npm run clean && rm -rf node_modules",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build completed successfully! Output directory: dist'",
    "validate:static": "node -e \"console.log('âœ… Static deployment configuration validated - no Workers required')\"",
    "ci:build": "npm ci && npm run build"
  },
  "dependencies": {
    "@vueuse/core": "^10.7.0",
    "axios": "^1.6.0",
    "hash-wasm": "^4.12.0",
    "lucide-vue-next": "^0.542.0",
    "mime": "^4.0.7",
    "minimatch": "^10.0.3",
    "radix-vue": "^1.9.17",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vue-tsc": "^1.8.0"
  }
}